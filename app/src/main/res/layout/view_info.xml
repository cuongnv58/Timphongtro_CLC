<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/display_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@null"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:gravity="right|top"/>



        <TextView
            android:id="@+id/display_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@null"
            android:textSize="23sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/display_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem bản đồ"
            android:textSize="17sp"
            android:textColor="#2b30d1"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/display_square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@null"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/display_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@null"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/display_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@null"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/display_extra_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@null"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhận xét"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</ScrollView>